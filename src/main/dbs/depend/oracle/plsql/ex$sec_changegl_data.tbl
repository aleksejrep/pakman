CREATE TABLE EX$SEC_CHANGEGL_DATA
(
  CHANGE_SEQUENCE#  NUMBER,
  FLAGS             BINARY_DOUBLE CONSTRAINT EX$SEC_CHANGEGL_DATA_CC01 NOT NULL,
  SCHMAP            CHAR(8)       CONSTRAINT EX$SEC_CHANGEGL_DATA_CC02 NOT NULL,
  SUBJECT           VARCHAR2(64)  CONSTRAINT EX$SEC_CHANGEGL_DATA_CC03 NOT NULL,
  DATA_CHAR         VARCHAR2(128),
  DATA_LOB          CLOB,          
  CONSTRAINT EX$SEC_CHANGEGL_DATA_CPK PRIMARY KEY (CHANGE_SEQUENCE#)
  USING INDEX (CREATE UNIQUE INDEX EX$SEC_CHANGEGL_DATA_CPKX ON EX$SEC_CHANGEGL_DATA(CHANGE_SEQUENCE#))
  ENABLE VALIDATE
)
LOB (DATA_LOB) STORE AS (
  TABLESPACE   &TBSLOBNAME
  DISABLE      STORAGE IN ROW
  INDEX EX$SEC_CHANGEGL_DATA_LIDX01 (TABLESPACE &TBSIDXNAME)
)
TABLESPACE &TBSDATNAME;

