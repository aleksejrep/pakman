COMMENT ON TABLE EX$SEC_ACCOUNT_USER IS 'Привязка аккаунта к пользователю учтеной системы';

COMMENT ON COLUMN EX$SEC_ACCOUNT_USER.ACCOUNT_ID IS 'ID аккаунта';

COMMENT ON COLUMN EX$SEC_ACCOUNT_USER.USER_ID IS 'ID пользователя';

COMMENT ON COLUMN EX$SEC_ACCOUNT_USER.SFLAGS IS 'Флаги состояния';

COMMENT ON COLUMN EX$SEC_ACCOUNT_USER.FLAGS IS 'Дополнительные аттрибуты';

COMMENT ON COLUMN EX$SEC_ACCOUNT_USER.LAST_UPDATED_BY IS 'Аудит: ID изменившего запись';

COMMENT ON COLUMN EX$SEC_ACCOUNT_USER.LAST_UPDATE_TSTAMP IS 'Аудит: Время изменения записи';

COMMENT ON COLUMN EX$SEC_ACCOUNT_USER.CREATED_BY IS 'Аудит: ID создавшего запись';

COMMENT ON COLUMN EX$SEC_ACCOUNT_USER.CREATION_TSTAMP IS 'Аудит: Время создания записи';
