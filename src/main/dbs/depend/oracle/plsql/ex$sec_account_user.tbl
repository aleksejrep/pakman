CREATE TABLE EX$SEC_ACCOUNT_USER
(
  ACCOUNT_ID          NUMBER        CONSTRAINT EX$SEC_ACCOUNT_USER_CC01 NOT NULL,
  USER_ID             NUMBER        CONSTRAINT EX$SEC_ACCOUNT_USER_CC02 NOT NULL,
  SFLAGS              BINARY_DOUBLE CONSTRAINT EX$SEC_ACCOUNT_USER_CC03 NOT NULL,
  FLAGS               BINARY_DOUBLE CONSTRAINT EX$SEC_ACCOUNT_USER_CC04 NOT NULL,
  LAST_UPDATED_BY     NUMBER(10)    CONSTRAINT EX$SEC_ACCOUNT_USER_CC05 NOT NULL,
  LAST_UPDATE_TSTAMP  TIMESTAMP(6)  DEFAULT CURRENT_TIMESTAMP CONSTRAINT EX$SEC_ACCOUNT_USER_CC06 NOT NULL,
  CREATED_BY          NUMBER(10)    CONSTRAINT EX$SEC_ACCOUNT_USER_CC07 NOT NULL,
  CREATION_TSTAMP     TIMESTAMP(6)  CONSTRAINT EX$SEC_ACCOUNT_USER_CC08 NOT NULL,
  CONSTRAINT EX$SEC_ACCOUNT_USER_CUQ01 UNIQUE (ACCOUNT_ID, USER_ID) 
  USING INDEX (CREATE UNIQUE INDEX EX$SEC_ACCOUNT_USER_CUQ01X ON EX$SEC_ACCOUNT_USER(ACCOUNT_ID, USER_ID) TABLESPACE &TBSIDXNAME)
  ENABLE VALIDATE
)
TABLESPACE &TBSDATNAME;

